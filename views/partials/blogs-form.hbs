 <!-- Main content -->
    
      <div class="row">
        <div class="col-md-12">
            <div class="card card-outline card-info">
            <div class="card-header">
                <h3 class="card-title">
                Add New
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <!-- text input -->
            <div class="form-group row">
                <label class="col-sm-2" >Title</label>
                <div class="col-sm-6">
                <!-- text input -->
                    <input type="text" class="form-control" value="{{this.Title}}" id="title" placeholder="Enter ..." name = "Title">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Category</label>
                <div class="col-sm-6">
                    <select class="form-control select2bs4" style="width: 100%;" value="{{this.Category}}" name = "Category">
                        <option>{{this.Category}}</option>
                        <option>Gadgets</option>
                        <option>Hacking</option>
                        <option>Security</option>
                        <option>Network</option>
                        <option>Hardware</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" >Tags</label>
                <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <input type="text" class="form-control" value="{{this.Tags}}" id="tags" placeholder="Enter ..." name = "Tags">
                </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" >Content</label>
                <div class="col-sm-6">
                <textarea id="summernote" name = "Content">
                    {{this.Content}}
                </textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Photo</label>
                <div class="col-sm-6">
                <div class="input-group">
                    <div class="custom-file">
                    <input type="file" class="form-control" accept="image/*" id="exampleInputFile" name = "Photo">
                    {{!-- <label class="custom-file-label" for="exampleInputFile">Choose photo</label> --}}
                    </div>
                    {{!-- <div class="input-group-append">
                    <span class="input-group-text">Upload</span>
                    </div> --}}
                </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Date:</label>
                <div class="col-sm-6 input-group date" id="reservationdate" data-target-input="nearest">
                    <input type="text" class="form-control datetimepicker-input" id="date"  value="{{this.Date}}" data-target="#reservationdate" name = "Date"/>
                            <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" >Author</label>
                <div class="col-sm-6">
                <!-- text input -->
                
                    <input type="text" class="form-control" value="{{this.Author}}" id="author" placeholder="Enter ..." name = "Author">
                
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" >Status</label>
                
                  <!-- text input -->
                    <div class="col-sm-6">
                        
                        <select class="form-control select2bs4" style="width: 100%;" value="{{this.Status}}" name = "Status">
                            <option>{{this.Status}}</option>
                            <option>Published</option>
                            <option>Drafted</option>
                        </select>
                    
                    </div>
                
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                <button type="button" class="btn btn-block btn-warning btn-sm">Update</button>
                </div>
                <div class="col-sm-6" style="margin: center;">
                <button type="submit" class="btn btn-block btn-success btn-sm">Submit</button>
                </div>
            </div>
                
            </div>
            </div>
        </div>
        <!-- /.col-->
      </div>
   